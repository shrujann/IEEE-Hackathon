{
  "manifest_version": 3,
  "name": "Study Helper Menu",
  "version": "2.2.0",
  "description": "Quick help tools: transcript, AI summary, voiceover + readability.",
  "permissions": ["activeTab", "storage", "tts"],
  "host_permissions": ["<all_urls>", "http://localhost:3000/*"],
  "action": {
    "default_title": "Helper Menu",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
